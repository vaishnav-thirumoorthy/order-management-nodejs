<div class="form-wrapper">
  <div class="logo" style="display: inline; width:100%">
   <img alt="Home" style="width: 50px; height:50px; display:inline"
                src="data:image/svg+xml;base64," />
    <p><i>Restaurant</i></p>
  </div>
{{#unless forgot_password}}
<div class="login-form-container">
  <div class="login-title">
    <h3>Login</h3>
  </div>
<form class="login-form" action="/users/login" method="POST" autocomplete="off">
  {{> messages }}
  <div class="form-input">
    <input type="email" name="email" autocomplete="off" placeholder="Email address">
  </div>
  <div class="form-input">
    <input type="password" name="password" placeholder="Password">
  </div>
  <a href="/users/login?reset" id="forgot-password">Forgot your password?</a>
<button type="submit" class="form-action login">Login</button>
<hr class="login-separator">
<h4>Not a registered user? Sign up <a href="/users/register">here</a></h4>
</form>
</div>
</div>
{{/unless}}
{{#if forgot_password}}
<div class="login-form-container">
  <div class="login-title">
    <h3>Reset Password</h3><br>
    <p>Give us your email address and instructions to reset your password will be emailed to you.</p>
  </div>
<form class="login-form" action="/users/reset_password" method="POST" autocomplete="off">
  {{> messages }}
  <div class="form-input">
    <input type="email" name="email" autocomplete="off" placeholder="Email address">
  </div>
<a href="/users/login" class="form-action" style="background-color: #02b875; color:white; text-decoration:none; border:#02b875;">Cancel</a>
<button type="submit" class="form-action login" style="width: 30%; font-size:16px">Reset my password</button>
</form>
</div>
</div>
{{/if}}