{{> agent_side_nav}}

<div class="agent-main-wrapper">
{{> agent_header }}
  <div class="admin-wrapper">
        <div class="admin-settings">
            {{> messages }}
            <div class="agent-form-title">
                <h3>Create Menu</h3>
            </div>
            <div class="menu-form-wrapper">
            <form action="/admin/menus" method="post">
            <div class="form-input">
            <label for="menu">Menu Name</label>
            <input type="text" name="name" id="menu-name" required>
            </div>
            <div class="form-input">
            <label for="status">Status</label>
            <select name="status" id="menu-status" required>
              <option selected>Choose a status</option>
              <option value="1">Active</option>
              <option value="2">Inactive</option>
            </select>
            </div>
            <div class="form-input">
            <button type="submit" class="form-action">Create Menu</button>
            <a href="/admin/menus" class="cancel-button">Cancel</a>
            </div>
         </form>
         </div>
        </div>
    </div>
</div>